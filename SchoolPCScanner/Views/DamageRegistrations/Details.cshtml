@model SchoolPCScanner.Models.DamageRegistration

@{
    ViewData["Title"] = "Details";
}


<div>
    <h3>Schaderegistratie</h3>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegistrationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegistrationDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Student.FullName)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Student != null)
            {
                @Html.ActionLink(Model.Student.FullName, "Details", "Students", new { id = Model.Student.Id }, new { @class = "btn btn-primary btn-sm" })
            }
            else
            {
                <span>Geen leerling gekoppeld</span>
            }
            @* @Html.ActionLink(Model.Student.FullName, "Details", "Students", new { id = Model.Student.Id }, new { @class = "btn btn-primary btn-sm" }) *@
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Device)
        </dt>
        <dd class="col-sm-10">
           @*  @Html.ActionLink(Model.Device.Serienumber, "Details", "Devices", new { id = Model.Device.Id }, new { @class = "btn btn-primary btn-sm" }) *@
            @if (Model.Device != null)
            {
                @Html.ActionLink(Model.Device.Serienumber, "Details", "Devices", new { id = Model.Device.Id }, new { @class = "btn btn-primary btn-sm" })
            }
            else
            {
                <span>Geen toestel gevonden</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Device.Supplier)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Device.Supplier.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DamageTypes)
        </dt>
        <dd class="col-sm-10">
            @if (Model.DamageTypes != null && Model.DamageTypes.Any())
            {
                @foreach (var damageType in Model.DamageTypes)
                {
                    <p> - @damageType.TypeName</p>
                }
            }
            else
            {
                <p>Geen schaden beschikbaar</p>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Note)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
    </dl>
</div>
